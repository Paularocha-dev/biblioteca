        print("Cem Anos de Solidão - Gabriel García Márquez")
        print("A Montanha Mágica - Thomas Mann")
        print("Grandes Esperanças - Charles Dickens")
        print("O Amor nos Tempos do Cólera - Gabriel García Márquez")
        print("Doutor Jivago - Boris Pasternak")
    elif genero == "TERROR":
        print("Drácula - Bram Stoker")
        print("Frankenstein - Mary Shelley")
        print("O Iluminado - Stephen King")
        print("It: A Coisa - Stephen King")
        print("O Exorcista - William Peter Blatty")
        print("A Assombração da Casa da Colina - Shirley Jackson")
        print("O Chamado de Cthulhu - H.P. Lovecraft")
        print("O Médico e o Monstro - Robert Louis Stevenson")
        print("O Bebê de Rosemary - Ira Levin")
        print("Hell House - Richard Matheson")
    elif genero == "BIOGRAFIA":
        print("Steve Jobs - Walter Isaacson")
        print("Longa Caminhada até a Liberdade - Nelson Mandela")
        print("A História de Minha Vida - Helen Keller")
        print("O Diário de Anne Frank - Anne Frank")
        print("Eu Sei Por Que o Pássaro Canta na Gaiola - Maya Angelou")
