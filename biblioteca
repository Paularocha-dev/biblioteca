def ler_resposta(mensagem):
    while True:
        resposta = input(mensagem).strip().upper()
        if resposta in ["S", "N"]:
            return resposta
        else:
            print("Erro: Por favor, responda com 'S' para sim ou 'N' para não.")

def ler_genero(mensagem):
    generos_validos = ["CLASSICO", "FANTASIA", "POEMA", "ROMANCE", "TERROR", "BIOGRAFIA"]
    while True:
        genero = input(mensagem).strip().upper()
        if genero in generos_validos:
            return genero
        else:
            print("Erro: Por favor, escolha um gênero válido (CLASSICO, FANTASIA, POEMA, ROMANCE, TERROR, BIOGRAFIA).")

resposta = ler_resposta("Deseja ter acesso ao menu de livros disponíveis? (S/N): ")

if resposta == "S":
    genero = ler_genero("Escolha o gênero do livro (CLASSICO, FANTASIA, POEMA, ROMANCE, TERROR, BIOGRAFIA): ")
    
    if genero == "CLASSICO":
        print("Dom Quixote - Miguel de Cervantes")
        print("Os três mosqueteiros - Alexandre Dumas")
        print("Moby Dick - Herman Melville")
        print("Crime e Castigo - Fiódor Dostoiévski")
        print("O Grande Gatsby - F. Scott Fitzgerald")
        print("1984 - George Orwell")
        print("A Odisséia - Homero")
        print("Guerra e Paz - Liev Tolstói")
        print("Retrato de Dorian Gray - Oscar Wilde")
        print("Os Miseráveis - Victor Hugo")
    elif genero == "FANTASIA":
        print("O Senhor dos Anéis - J.R.R. Tolkien")
        print("Harry Potter - J.K. Rowling")
        print("As Crônicas de Nárnia - C.S. Lewis")
        print("O Hobbit - J.R.R. Tolkien")
        print("A Roda do Tempo - Robert Jordan")
        print("O Nome do Vento - Patrick Rothfuss")
        print("A Canção do Gelo e Fogo - George R.R. Martin")
        print("Mistborn: Nascidos da Bruma - Brandon Sanderson")
        print("American Gods - Neil Gaiman")
    elif genero == "POEMA":
        print("Divina Comédia - Dante Alighieri")
        print("Ilíada - Homero")
        print("O Corvo e Outros Poemas - Edgar Allan Poe")
        print("As Flores do Mal - Charles Baudelaire")
        print("Folhas de Relva - Walt Whitman")
        print("Cantos de Maldoror - Comte de Lautréamont")
        print("A Eneida - Virgílio")
        print("Paraíso Perdido - John Milton")
        print("Cem Sonetos de Amor - Pablo Neruda")
        print("Odes - Horácio")
    elif genero == "ROMANCE":
        print("Orgulho e Preconceito - Jane Austen")
        print("Anna Karenina - Liev Tolstói")
        print("Jane Eyre - Charlotte Brontë")
        print("O Morro dos Ventos Uivantes - Emily Brontë")
